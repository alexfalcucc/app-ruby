<% if @user_session.errors.has_key? :base %>
	<div class="panel-body">
	<div class="alert alert-danger">
		<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
		<strong><%= @user_session.errors[:base].join(', ') %></strong>
	</div>
	</div>
<% end %>

<div class="panel-body">
    <%= form_for @user_session do |f| %>
        <fieldset>
            <div class="form-group">
                <%= f.email_field :email, :class => 'form-control', :placeholder => 'E-mail' %>
            </div>
            <div class="form-group">
                <%= f.password_field :password, :class => 'form-control', :placeholder => 'Password' %>
            </div>
            <!-- Change this to a button or input when using this as a form -->
            <%= f.submit "Sign In", :class => 'btn btn-sm btn-success' %>
            <a class="btn btn-sm btn-info" href="<%= new_user_path %>">Sign Up</a>
        </fieldset>
    <% end %>
</div>
