<h1>Group Files</h1>
<div class="container">
  <div class="row">
    <div class="span5">
  <% if @posts.empty? %>
  <p>Sorry, no file was sent. Do it now! :)</p>
  <% else %>
            <table class="table table-striped table-condensed">
                  <thead>
                  <tr>
                      <th>Title</th>
                      <th>Action</th>                                          
                  </tr>
              </thead>   
              <tbody>
              <% @posts.each do |post| %>
                <tr>
                    <td><%= post.title %></td>
                    <td><%= link_to 'Show', post, :class => 'btn btn-info' %>
                    &nbsp;
                    <%= link_to 'Edit', edit_post_path(post), :class => 'btn btn-warning' %>
                    &nbsp;
                    <%= link_to 'Destroy', post, :class => 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %>
                    </td>
                </tr>
                <% end %>
              </tbody>
            </table>
            <% end %>
            <%= link_to 'New Upload', new_post_path, :class => 'btn btn-success' %>
            </div>

  </div>
</div>